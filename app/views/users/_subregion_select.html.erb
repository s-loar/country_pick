<div id="user_state_code_wrapper">
  <div class="form-group">
    <div class="control-label col-md-2">
      <label for="address_address1"><%= @address1_label %></label>
    </div>
    <div class='col-md-10'>
      <%= text_field(:user, :address1, class: 'form-control' ) %>
    </div>
  </div>

  <% if !@parent_region.nil? && @parent_region != 'US' %>
    <div class="form-group">
      <div class="control-label col-md-2">
        <label for="address_address2">Address Line 2</label>
      </div>
      <div class='col-md-10'>
        <%= text_field(:user, :address2, class: 'form-control' ) %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <label for="address_address2">Address Line 3</label>
      </div>
      <div class='col-md-10'>
        <%= text_field(:user, :address3, class: 'form-control' ) %>
      </div>
    </div>
  <% end %>

  <div class='form-group'>
    <div class='control-label col-md-2'>
      <label for="state_code"><%= @state_label %></label>
    </div>
    <div class='col-md-10'>
      <% if @country.nil? %>
        <em>Please select a country above</em>
      <% elsif @country.subregions? %>
        <%= subregion_select(:user, :state_code, @parent_region, {}, { class: 'form-control' }) %>
      <% else %>
        <%= text_field(:user, :state_code, class: 'form-control') %>
      <% end %>
    </div>
  </div>
</div>
